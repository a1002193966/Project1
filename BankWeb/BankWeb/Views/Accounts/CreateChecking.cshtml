@model BankWeb.Models.BankEntity.Account
@{
    ViewData["Title"] = "CreateChecking";
}



    <style>
                body {
            background-image: url("https://www.canva.com/ja_jp/learn/wp-content/uploads/sites/10/2019/04/2.jpg");
            color: black;
        }

        a:hover {
            color: white;
        }
       #btn {
            padding: 9px 25px;
            background-color: rgba(0,136,169,0.4);
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.3s ease 0s;
        }

            #btn:hover {
                background-color: rgba(0,136,169,0.8);
                text-decoration: none;
            }
            a{
                text-decoration: none;
                color: black;
            }
            
    </style>




<h2 style="margin-bottom: 20px;">Create Checking</h2>

<div class="row" >
    <div class="col-md-4">
        <form asp-action="CreateChecking">
            <div class="form-group">
                <label asp-for="Balance" class="control-label">Initial Deposit:</label>
                <input asp-for="Balance" value="0" id="input" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="btn" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="GetChecking">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}